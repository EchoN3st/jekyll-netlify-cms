@import "minimal-mistakes";

body {
  font-family: 'Inter', sans-serif;
  background-color: #121416;
  color: #e0e0e0;
  margin: 0;
  padding: 0;
  height: 100%;
}

a {
  color: #00ffd0;
  text-decoration: none;
}
a:hover {
  color: #80ffe5;
}

.site-header {
  background-color: #181a1b;
  padding: 1rem;
}

// Sidebar 
.sidebar-nav {
  width: 220px;
  position: fixed;
  top: 0;
  left: 0;
  height: 100vh;
  background: #1e1e1e;
  padding-top: 2rem;
}

.sidebar-nav .logo {
  font-size: 1.5rem;
  color: #00ffd0;
  padding-left: 1rem;
}

.sidebar-nav ul {
  list-style: none;
  padding: 0;
}

.sidebar-nav li {
  margin: 1rem 0;
  padding-left: 1rem;
}

.sidebar-nav a {
  display: block;
  padding: 0.6rem 1rem;
  color: #ccc;
}

.sidebar-nav a:hover {
  background-color: #2a2a2a;
  color: #00ffd0;
}

.sidebar-nav a.active {
  background-color: #2a2a2a;
  color: #00ffd0;
  display: block;
  width: 100%;
  border-radius: 6px;
  padding: 0.6rem 1rem;
  box-sizing: border-box;
}

// ====
.main-content {
  margin-left: 240px;
  padding: 2rem;
  flex: 1;
  max-width: 1000px;
  margin-right: auto;
  margin-left: 240px;

}

.posts-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: 2rem;
}

.post-card {
  background-color: #1f2122;
  padding: 1.5rem;
  border-radius: 8px;
  border: 1px solid #2e2e2e;
  transition: all 0.3s ease;
}
.post-card:hover {
  border-color: #00ffd0;
}


.page-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  //margin-left: 150px;
}

.site-footer {
  //background-color: #1a1a1a;
  color: #aaa;
  text-align: center;
  padding: 1px 0;
  font-size: 14px;
}

.site-footer p {
 margin-bottom:0.2rem;
 }


.footer-social {
  margin-top: 0.3rem;
  text-align: center;

  a {
    color: #00ffc3;
    margin: 0 0.75rem;
    font-size: 0.85rem;
    transition: color 0.3s;

    &:hover {
      color: lighten(#00ffc3, 30%);
    }
  }
}
